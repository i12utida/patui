<% provide(:title, 'お知らせ投稿') %>
<h1>お知らせ投稿</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@news, url: news_path([@news])) do |f| %>
        <%= render 'shared/news_form' %>
        
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title, class: 'form-control' %>

        <%= f.label :content, "内容" %>
        <%= f.text_field :content, class: 'form-control' %>

    <%= f.submit "投稿する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
