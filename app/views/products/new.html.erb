<% provide(:title, '商品追加') %>
<h1>商品追加</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product, url: products_path([@product])) do |f| %>
        <%= render 'shared/product_form' %>
        
        <%= f.label :jan_code, "JANコード" %>
        <%= f.number_field :jan_code, class: 'form-control' %>

        <%= f.label :product_name, "商品名"  %>
        <%= f.text_field :product_name, class: 'form-control' %>
        
        <%= f.label :product_stack, "在庫数" %>
        <%= f.number_field :product_stack, class: 'form-control' %>
        
        <%= f.label :product_cost, "価格" %>
        <%= f.number_field :product_cost, class: 'form-control' %>
        
        <%= f.label :product_type, "分類" %>
        <%= f.select :product_type, Product.product_type_choice, :prompt => "選択してください" %>

    <%= f.submit "追加する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
